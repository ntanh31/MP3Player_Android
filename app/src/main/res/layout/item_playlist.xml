<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_backgroundPlaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp">
    </ImageView>

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
    </View>

    <ImageView
        android:id="@+id/iv_iconPlaylist"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/iv_backgroundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageView>

    <TextView
        android:id="@+id/tv_tenPlaylist"
        android:text="asjdhjsadhjkasfhkjdhskfj"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/iv_iconPlaylist"
        android:layout_toRightOf="@id/iv_iconPlaylist"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>