<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="20dp"
            android:text="1"
            android:layout_margin="15dp"
            android:id="@+id/tv_danhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tv_tenbaihat_quangcao"
            android:textStyle="bold"
            android:text="sajkdhajsdhkjashdkjsadhk"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_danhsachindex"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tv_tencasi_quangcao"
            android:textSize="20dp"
            android:text="ĐAN TRƯỜNG"
            android:layout_toRightOf="@+id/tv_danhsachindex"
            android:layout_below="@id/tv_tenbaihat_quangcao"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:id="@+id/iv_luotthich_quangcao"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/iconlove"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>